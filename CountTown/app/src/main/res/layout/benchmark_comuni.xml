<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/benview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/benchDescrizione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/benchNcomune"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:text="Benchmark relativo al comune di:"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/benchNcomune"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/benchComune1"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginBottom="60dp"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="Nome" />

    <Button
        android:id="@+id/benchComune1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/benchComune2"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="1° COMUNE" />

    <Button
        android:id="@+id/benchComune2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/benchComune3"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="2° COMUNE" />

    <Button
        android:id="@+id/benchComune3"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/benchComune4"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="3° COMUNE" />

    <Button
        android:id="@+id/benchComune4"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/benchComune5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:text="4° COMUNE" />

    <Button
        android:id="@+id/benchComune5"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:text="5° COMUNE" />

</RelativeLayout>